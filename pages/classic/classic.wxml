<view class="container">
    <view class="header">
        <r-epsoide class="epsoide" index="{{classicData.index}}" />
        <r-like class="like" bind:like="onLike" like="{{classicData.like_status}}" count="{{classicData.fav_nums}}" />
    </view>

    <!-- 电影 -->
    <r-movie img="{{classicData.image}}" content="{{classicData.content}}" />

    <!-- 音乐 -->
    <!-- <r-music img="{{classicData.image}}" content="{{classicData.content}}" /> -->

    <view class="navi">
        <r-navi bind:left="onNext" bind:right="onPrevious" title="{{classicData.title}}" first="{{first}}" latest="{{latest}}"/>
    </view>
</view>