<view hidden="{{hidden}}" class="container">
    <image class="classic-img {{isPlaying ? 'rotation' : ''}}" src="{{img}}"></image>
    <image class="operate-img" src="{{isPlaying ? './images/player@pause.png' : './images/player@play.png'}}"  bind:tap="onPlay"></image>
    <image class="tag" src="images/music@tag.png"></image>
    <text class="content">{{content}}</text>
</view>